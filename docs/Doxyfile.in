# Project setup
PROJECT_NAME           = Moci
PROJECT_NUMBER         = 0.1.0

# Main page and input dirs
USE_MDFILE_AS_MAINPAGE = README.md
INPUT                  = ../README.md \
                        ../docs \
                        ../src/moci
INPUT_ENCODING         = UTF-8
FILE_PATTERNS          = *.hpp *.md
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO     # document private members & functions
EXTRACT_STATIC         = YES    # document static members & functions

ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = YES
PREDEFINED             = MOCI_API_OPENGL_LEGACY=1 MOCI_API_OPENGL_MODERN=1

# Generate html output
GENERATE_HTML          = YES
GENERATE_TREEVIEW      = NO
GENERATE_LATEX         = NO
PDF_HYPERLINKS         = YES
USE_PDFLATEX           = YES

SHOW_FILES             = NO
SHOW_NAMESPACES        = YES
FULL_PATH_NAMES        = NO
BUILTIN_STL_SUPPORT    = YES
SORT_MEMBERS_CTORS_1ST = YES
FORMULA_FONTSIZE       = 14
CALL_GRAPH             = YES
INTERACTIVE_SVG        = YES

# HAVE_DOT = YES
# DOT_IMAGE_FORMAT = svg
# DOT_TRANSPARENT = YES

# Set output directory
OUTPUT_DIRECTORY       = documentation

ENUM_VALUES_PER_LINE   = 1

#HTML_EXTRA_STYLESHEET  = doxygen-awesome-css/doxygen-awesome.css

#GENERATE_TREEVIEW      = YES # required!
#HTML_EXTRA_STYLESHEET  = doxygen-awesome-css/doxygen-awesome.css doxygen-awesome-css/doxygen-awesome-sidebar-only.css
